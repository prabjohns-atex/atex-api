{
  // the salt used to encrypt the secure token, if empty a default one will be used.
  "salt": "",

  // mails configuration
  "mails": {
    "reset": {
      "appName": "Desk",
      "subject": "Reset password link",
      "template": "/reset-password/mustache/en/resetPassword.hbs",
      "useHTML": true,
      "passwordResetUrl": "http://localhost:8080/onecms/reset-password/reset-password.html",
      "sender": "",
      "supportEmail": "",
      // in seconds
      "expireTime": 600
    },
    "changed": {
      "appName": "Desk",
      "subject": "Password changed",
      "template": "/reset-password/mustache/en/changedPassword.hbs",
      "useHTML": true,
      "sender": "",
      "supportEmail": ""
    }
  },

  // default locale
  "defaultLocale": "en",

  "passwordRules": {

    // minimum length
    "minLen": 8,

    // minimum alphabetic
    "minAlp": 1,

    // minimum numeric
    "minNum": 1,

    // minimum special characters
    "minSPE": 1,

    // special characters
    "specialChars": "!@#$%&*?",

    // must have mixed case
    "mixCase": true
  }
}
